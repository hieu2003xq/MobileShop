@section script{
    <script src="~/soucreClients/js/bxslider.min.js"></script>
    <script src="~/soucreClients/js/script.slider.js"></script>
    <script src="~/assets/vendor_components/jquery-toast-plugin-master/src/jquery.toast.js"></script>
    <script>
        $(document).ready(function () {
            loadbanChay();
            xemGanDay();
            $(".btnadd").on("click", function () {
                var maSP = $(this).data("id");
                $.ajax({
                    url: "/sanPham/themGioHang",
                    type: "POST",
                    data: { maSP: maSP },
                    success: function (res) {
                        if (res.success) {
                            $.toast({
                                heading: 'Thành Công  ',
                                text: 'Thêm Sản Phẩm Vào Giỏ Hàng ',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 1500,
                                stack: 6,
                            });
                        }

                    }
                })
            })
            $(".btndetail").on("click", function () {
                var maSP = $(this).data("id");
                $.ajax({
                    url: "/sanPham/getID",
                    type: "POST",
                    data: { maSP: maSP, __RequestVerificationToken: $('input[name=__RequestVerificationToken]').val() },
                    success: function (res) {
                        if (res.success) {
                            window.location.href = '/sanPham/detail';
                        }
                    }
                })

            })
            $('body').on('click', '.btndetail3', function () {
                var maSP = $(this).data("id");
                $.ajax({
                    url: "/sanPham/getID",
                    type: "POST",
                    data: { maSP: maSP, __RequestVerificationToken: $('input[name=__RequestVerificationToken]').val() },
                    success: function (res) {
                        if (res.success) {
                            window.location.href = '/sanPham/detail';
                        }
                    }
                })
            })


        })
        function loadbanChay() {
            $.ajax({
                url: "/sanPham/banChay",
                type: "POST",
                success: function (res) {
                    if (res.success) {
                        var items = res.data;
                        var html1 = "";
                        for (let i = 0; i < items.length; i++) {
                            html1 += " <div class='single-wid-product'>";
                            html1 += "<a href='' data-id='" + items[i].maSP + "' class='btndetail3'><img src='/images/product/" + items[i].hinhAnh + "' alt='1111' class='product-thumb'/></a>";
                            html1 += " <h2><a href='' data-id='" + items[i].maSP + "' class='btndetail3'>" + items[i].tenSP + "</a></h2>";
                            html1 += " <div class='product-wid-rating'><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i></div > ";
                            html1 += "<div class='product-wid-price'><ins>" + items[i].giaBan.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) + "</ins></div> ";
                            html1 += "</div>";
                        }
                        $("#dsBanChay1").append(html1);


                    }
                }
            })
        }
        function xemGanDay() {
            $.ajax({
                url: "/sanPham/XemGanDay1",
                type: "POST",
                success: function (res) {
                    if (res.success) {
                        var items = res.data;
                        var html1 = "";
                        for (let i = items.length - 1; i >= 0; i--) {
                            var x = 1;
                            html1 += " <div class='single-wid-product'>";
                            html1 += "<a href='' data-id='" + items[i].maSP + "' class='btndetail3'><img src='/images/product/" + items[i].hinhAnh + "' alt='1111' class='product-thumb'/></a>";
                            html1 += " <h2><a href='' data-id='" + items[i].maSP + "' class='btndetail3'>" + items[i].tenSP + "</a></h2>";
                            html1 += " <div class='product-wid-rating'><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i></div > ";
                            html1 += "<div class='product-wid-price'><ins>" + items[i].giaBan.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) + "</ins></div> ";
                            html1 += "</div>";
                            x++;
                        }
                        var totalItems = $('#xemGanDay1 >#xemGanDay1').length;
                        var startIndex = totalItems - 3;
                        $("#xemGanDay1").append(html1);
                        $("#xemGanDay1 >#xemGanDay1 :lt(" + startIndex + ")").hide();


                    }
                    else {
                        $("#xemGanDay1").append("");
                    }
                }

            })
        }

    </script>
}

