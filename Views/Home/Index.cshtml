@model List<ado.Models.products>
@using System.Globalization
@{
    Page.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">
            @foreach (var item in Model)
            {
                <li>
                    <img src="~/images/product/@item.hinhAnh" style="height:500px" />
                    <div class="caption-group">
                        <h2 class="caption title">
                            @item.tenSP
                        </h2>

                        <a class="caption button-radius" href="@Url.Action("Index","sanPham")"><span class="icon"></span>Shop now</a>
                    </div>
                </li>
            }

        </ul>
    </div>
    <!-- ./Slider -->
</div> <!-- End slider area -->

<div class="promo-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo1">
                    <i class="fa fa-refresh"></i>
                    <p>30 Days return</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo2">
                    <i class="fa fa-truck"></i>
                    <p>Free shipping</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo3">
                    <i class="fa fa-lock"></i>
                    <p>Secure payments</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo promo4">
                    <i class="fa fa-gift"></i>
                    <p>New products</p>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End promo area -->

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="~/soucreClients/img/@item.hinhAnh" />
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link btnadd" data-id="@item.maSP"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <a href="#" class="view-details-link btndetail" data-id="@item.maSP"><i class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>

                                <h2><a href="single-product.html">@item.tenSP</a></h2>
                                @{ decimal phamTram = (decimal)item.maGiam / 100;
                                    var x = (item.giaBan - (item.giaBan * phamTram))*1000;
                                    var gia1 = item.giaBan * 1000;}
                                <div class="product-carousel-price">
                                    <ins>@x.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</ins> <del>@gia1.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</del>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

<div class="brands-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="brand-wrapper">
                    <div class="brand-list">
                        <img src="~/soucreClients/img/brand1.png" alt="">
                        <img src="~/soucreClients/img/brand2.png" alt="">
                        <img src="~/soucreClients/img/brand3.png" alt="">
                        <img src="~/soucreClients/img/brand4.png" alt="">
                        <img src="~/soucreClients/img/brand5.png" alt="">
                        <img src="~/soucreClients/img/brand6.png" alt="">
                        <img src="~/soucreClients/img/brand1.png" alt="">
                        <img src="~/soucreClients/img/brand2.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End brands area -->
@Html.AntiForgeryToken();
<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Sản Phẩm bán chạy</h2>
                    <div id="dsBanChay1">

                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Vừa xem</h2>
                    <div id="xemGanDay1">

