                </div>
            </div>

            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Sản phẩm mới nhất</h2>
                    @foreach (var item in @ViewBag.topNew)
                    {
                        <div class="single-wid-product">
                            <a href="#" class="btndetail" data-id="@item.maSP"><img src="~/images/product/@item.hinhAnh" alt="" class="product-thumb"></a>
                            <h2><a href="#" class="btndetail" data-id="@item.maSP">@item.tenSP</a></h2>
                            <div class="product-wid-rating">
                                <i class="fa fa-star"></i>
